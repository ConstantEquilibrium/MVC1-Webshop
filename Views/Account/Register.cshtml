@model Inlämning_2___Webshop.Models.RegisterUser;
@{
    ViewData["Title"] = "Register";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.12.4.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

<form asp-action="Register" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="Username"><span class="input-required">*</span>Username:</label>
        <input asp-for="Username" placeholder="Username" class="form-control" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"><span class="input-required">*</span>Email:</label>
        <input asp-for="Email" placeholder="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" placeholder="Phone Number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"><span class="input-required">*</span>Password:</label>
        <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
        <span asp-validation-for="Password"></span>

        <label asp-for="PasswordConfirmed"><span class="input-required">*</span>Confirm password:</label>
        <input asp-for="PasswordConfirmed" placeholder="Confirm password" class="form-control" type="password" />
        <span asp-validation-for="PasswordConfirmed"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Sign up" />
</form>