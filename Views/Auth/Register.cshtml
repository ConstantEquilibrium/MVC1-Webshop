@model Inlämning_2___Webshop.Models.RegisterUser;
@{
    ViewData["Title"] = "Register";
}

<form asp-action="Register" asp-controller="Auth" method="post">
    <div class="form-group">
        <label asp-for="Username">Username:</label>
        <input asp-for="Username" placeholder="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" placeholder="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" placeholder="Phone Number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Phone Number:</label>
        <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
    </div>

    <input type="submit" class="btn btn-primary" value="Sign up" />
</form>