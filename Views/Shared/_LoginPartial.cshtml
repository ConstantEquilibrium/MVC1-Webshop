@using Microsoft.AspNetCore.Identity
@using Inlämning_2___Webshop.IdentityData;

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager


@if (signInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav flex-grow-1">

        <li class="dropdown nav-link">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li class="nav-link"><a asp-controller="User" asp-action="Orders">Orders</a></li>
                <li class="nav-link"><a asp-controller="User" asp-action="Settings">Settings</a></li>
                @if (User.IsInRole("admin"))
                {
                    <li role="separator" class="divider"></li>
                    <li class="nav-link"><a asp-controller="Admin" asp-action="AdminPanel">Admin</a> </li>
                }
                <li role="separator" class="divider"></li>
                <li class="nav-link"><a asp-controller="Auth" asp-action="Logout">Logga ut</a> </li>
            </ul>
        </li>

        @*<li class="nav-link"><a asp-controller="User" asp-action="Profile">@User.Identity.Name</a></li>
            <li class="nav-link"><a asp-controller="User" asp-action="Settings">Settings</a></li>
            <li class="nav-link"><a asp-controller="Auth" asp-action="Logout">Logga ut</a> </li>*@
        

    </ul>
}
else
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-link"><a class="btn btn-light" asp-controller="Auth" asp-action="Login">Logga in</a> </li>
        <li class="nav-link"><a class="btn btn-primary" asp-controller="Auth" asp-action="Register">Skapa användare</a> </li>
    </ul>

}